<p id="notice"><%= notice %></p>

<h1>Listing Api Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_books.each do |api_book| %>
      <tr>
        <td><%= api_book.name %></td>
        <td><%= api_book.author %></td>
        <td><%= api_book.price %></td>
        <td><%= link_to 'Show', api_book %></td>
        <td><%= link_to 'Edit', edit_api_book_path(api_book) %></td>
        <td><%= link_to 'Destroy', api_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_api_book_path %>
